#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;


  void main()
{
	 float K,I,N,P;
	 cout<<"ingrese el capital inicial: ";
	 cin>> K;
	 if (K>1000)
	 {
	 cout<<"ingrese el interes: ";
	 cin>> I;
	 cout<<"ingrese los dias: ";
	 cin>> N;

	 P = K*I*N/360;
     cout<<"El interes: "<<P;
	 }
	 else
	 cout<<"Su prestamo no es mas de 1000, LO SIENTO\n";


	 getch();

}
