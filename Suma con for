// Suma con for.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()

{
	 int s,n;
	 //valida que se ingresen datos correctos
	 do{
		 cout<<"ingrese numero de elemento a sumar en la serie: " ;
	     cin>>n;
     } while (n<=0 );
	 // inicializar el acumulador de suma
	 s=0;
	 for (int i=1;i<=n;i=i+2)
		 s=s+i;
	 cout<<"la suma de la serie es: " <<s;
	 getch();

}
